{% extends param('ccdn_message_message.message.layout_templates.compose') %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/ccdncomponentcrumbtrail/css/crumbs.css') }}" rel="stylesheet" type="text/css">
	<link href="{{ asset('bundles/ccdncomponentbbcode/css/bbcode.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/ccdncomponentbbcode/js/jquery.bbcode.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title %}{{ 'title.message.compose' |trans({}, 'CCDNMessageMessageBundle') }}{% endblock %}

{% block sidebar %}
	{% if is_granted('ROLE_MODERATOR') %}
	<div class="sidebar">
		<div class="sidebar_header"><span class="sidebar_header">{{ 'sidebar.header.special' | trans({}, 'CCDNComponentCommonBundle') }}</span></div>
		<div class="sidebar_panel"><a class="sidebar" href="{{ path('cc_moderator_forum_cp') }}">{{ 'general.view.link_moderate' | trans({}, 'CCDNComponentCommonBundle') }}</a></div>
		{% if is_granted('ROLE_ADMIN') %}
		<div class="sidebar_panel"><a class="sidebar" href="{{ path('cc_admin_forum_cp') }}">{{ 'general.view.link_administrate' | trans({}, 'CCDNComponentCommonBundle') }}</a></div>
		{% endif %}
	</div>
	{% endif %}
{% endblock %}

{% block body %}

{% include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' %}

<div class="section_wrap_top">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>
<div class="section_wrap_bottom">
	<div class="section_header">
		<h2>{{ 'title.message.compose' |trans({}, 'CCDNMessageMessageBundle') }}</h2>
	</div>
</div>

<div class="section_wrap_standalone">	
	<div class="section_table_panel">
		{% form_theme form param('ccdn_message_message.template.theme') %}
		<form action="{{ path('cc_message_message_compose') }}" method="post" {{ form_enctype(form) }}>
			{{ form_row(form._token) }}
			<div class="errors">{{ form_errors(form) }}</div>
			<table class="common_list">
				<tbody>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="form_label">{{ form_label(form.send_to, null, { 'label': 'form.label.message.to'| trans({}, 'CCDNMessageMessageBundle')}) }}</td>
						<td class="form_widget">
							{{ form_errors(form.send_to) }}
							{{ form_widget(form.send_to) }}
						</td>
					</tr>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="form_label">{{ form_label(form.subject, null, { 'label': 'form.label.message.subject'| trans({}, 'CCDNMessageMessageBundle')}) }}</td>
						<td class="form_widget">
							{{ form_errors(form.subject) }}
							{{ form_widget(form.subject) }}
						</td>
					</tr>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="form_label">{{ form_label(form.body, null, { 'label': 'form.label.message.body'| trans({}, 'CCDNMessageMessageBundle')}) }}</td>
						<td class="form_widget">
							{{ form_errors(form.body) }}
							{% form_theme form 'CCDNComponentBBCodeBundle:Form:fields.html.twig' %}
							{{ form_widget(form.body) }}
						</td>
					</tr>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="form_label">{{ form_label(form.flagged, null, { 'label': 'form.label.message.flagged'| trans({}, 'CCDNMessageMessageBundle')}) }}</td>
						<td class="form_widget">
							{{ form_errors(form.flagged) }}
							{{ form_widget(form.flagged) }}
						</td>
					</tr>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="form_label">{{ form_label(form.attachment, null, { 'label': 'form.label.message.attachment'| trans({}, 'CCDNMessageMessageBundle')}) }}</td>
						<td class="form_widget">
							{{ form_errors(form.attachment) }}
							{{ form_widget(form.attachment) }}
							&nbsp;<a target="_blank" href="{{ path('cc_attachment_index') }}">{{ 'link.attachments_manager' | trans({}, 'CCDNComponentAttachmentBundle') }}</a>
							&nbsp;<a target="_blank" href="{{ path('cc_attachment_upload') }}">{{ 'link.upload' | trans({}, 'CCDNComponentAttachmentBundle') }}</a>
						</td>
					</tr>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="form_tool_strip" colspan="2">
							<input type="submit" class="button_silver" value="{{ 'form.button.message.preview' | trans({}, 'CCDNMessageMessageBundle') }}" name="submit_preview">
							<input type="submit" class="button_silver" value="{{ 'form.button.message.save_draft' | trans({}, 'CCDNMessageMessageBundle') }}" name="submit_draft">
							<input type="submit" class="button_blue" value="{{ 'form.button.message.send' | trans({}, 'CCDNMessageMessageBundle') }}" name="submit_post">
						</td>
					</tr>
				</tbody>
			</table>
		</form>
	</div>
</div>

{% if preview is not empty %}
<div class="section_wrap_standalone">
	{% include 'CCDNMessageMessageBundle:Message:preview.html.twig' %}
</div>
{% endif %}

<div class="section_wrap_standalone">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>

{% endblock %}