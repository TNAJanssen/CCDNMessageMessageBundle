{% extends param('ccdn_message_message.message.compose.layout_template') %}

{% block stylesheets %}
	{{ parent() }}
{#	<link href="{{ asset('bundles/ccdncomponentcrumbtrail/css/crumbs.css') }}" rel="stylesheet" type="text/css">
	<link href="{{ asset('bundles/ccdncomponentbbcode/css/bbcode.css') }}" rel="stylesheet" type="text/css">#}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/ccdncomponentbbcode/js/jquery.bbcode.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title %}{{ 'title.message.compose' |trans({}, 'CCDNMessageMessageBundle') }}{% endblock %}

{% block sidebar %}
	{{ parent() }}
	
	{% include 'CCDNMessageMessageBundle:Sidebar:sidebar.html.twig' %}
	
{% endblock %}

{% block body %}

	{% include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' %}

	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}

	<h2>{{ 'title.message.compose' |trans({}, 'CCDNMessageMessageBundle') }}</h2>

	<div class="errors">{{ form_errors(form) }}</div>

	<div class="well">
		{% form_theme form param('ccdn_message_message.message.compose.form_theme') %}

		<form action="{{ path('cc_message_message_compose') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
			<fieldset>
				
				{{ form_errors(form) }}
				
				<div class="control-group"><div class="controls row-fluid">{{ form_row(form._token) }}</div></div>
				
				<div class="control-group{{ (form.send_to.vars.errors|length > 0) ? ' error': '' }}">
					{{ form_label(form.send_to, null, { 'label': 'form.label.message.to'| trans({}, 'CCDNMessageMessageBundle')}) }}
					<div class="controls row-fluid">
						{{ form_errors(form.send_to) }}
						{{ form_widget(form.send_to) }}
					</div>
				</div>
				
				<div class="control-group{{ (form.subject.vars.errors|length > 0) ? ' error': '' }}">
					{{ form_label(form.subject, null, { 'label': 'form.label.message.subject'| trans({}, 'CCDNMessageMessageBundle')}) }}
					<div class="controls row-fluid">
						{{ form_errors(form.subject) }}
						{{ form_widget(form.subject) }}
					</div>
				</div>
				
				<div class="control-group{{ (form.body.vars.errors|length > 0) ? ' error': '' }}">
					{{ form_label(form.body, null, { 'label': 'form.label.message.body'| trans({}, 'CCDNMessageMessageBundle')}) }}
					<div class="controls row-fluid">					
						{{ form_errors(form.body) }}
						{{ form_widget(form.body) }}
					</div>
				</div>
				
				<div class="control-group{{ (form.is_flagged.vars.errors|length > 0) ? ' error': '' }}">
					{{ form_label(form.is_flagged, null, { 'label': 'form.label.message.flagged'| trans({}, 'CCDNMessageMessageBundle')}) }}
					<div class="controls row-fluid">
						{{ form_errors(form.is_flagged) }}
						<label class="checkbox">{{ form_widget(form.is_flagged, {'class': 'checkbox pull-left', 'value': 'option1'}) }}</label>
					</div>
				</div>
				
				<div class="control-group{{ (form.attachment.vars.errors|length > 0) ? ' error': '' }}">
					{{ form_label(form.attachment, null, { 'label': 'form.label.message.attachment'| trans({}, 'CCDNMessageMessageBundle')}) }}
					<div class="controls row-fluid">
						{{ form_errors(form.attachment) }}
						{{ form_widget(form.attachment) }}
						&nbsp;<a target="_blank" href="{{ path('cc_attachment_index') }}">{{ 'link.attachments.manager' | trans({}, 'CCDNComponentAttachmentBundle') }}</a>
						&nbsp;<a target="_blank" href="{{ path('cc_attachment_upload') }}">{{ 'link.attachments.upload' | trans({}, 'CCDNComponentAttachmentBundle') }}</a>
					</div>
				</div>
				
				<div class="form-actions">
					<button type="submit" class="btn btn-primary" name="submit_post">{{ 'form.button.message.send' | trans({}, 'CCDNMessageMessageBundle') }}</button>
					<button type="submit" class="btn btn-default" name="submit_preview">{{ 'form.button.message.preview' | trans({}, 'CCDNMessageMessageBundle') }}</button>
					<button type="submit" class="btn btn-default" name="submit_draft">{{ 'form.button.message.save_draft' | trans({}, 'CCDNMessageMessageBundle') }}</button>
				</div>
			</fieldset>
		</form>
	</div>
	
	{% if preview is not empty %}
		{% include 'CCDNMessageMessageBundle:Message:item_preview.html.twig' with {'message': preview } %}
	{% endif %}

	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}

{% endblock %}