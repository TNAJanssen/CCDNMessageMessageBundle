{% extends param('ccdn_message_message.folder.layout_templates.show') %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/ccdncomponentcrumbtrail/css/crumbs.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/ccdncomponentcommon/js/jquery.checkboxes.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title %}{{ 'title.message.index' |trans({'%folder_name%': current_folder.getName }, 'CCDNMessageMessageBundle') }}{% endblock %}

{% block sidebar %}
	{{ parent() }}

	<div class="sidebar">
		<div class="sidebar_header"><span class="sidebar_header">{{ 'sidebar.header.tools' | trans({}, 'CCDNForumForumBundle') }}</span></div>
		<div class="sidebar_panel"><a class="sidebar" href="{{ path('cc_message_message_compose') }}">{{ 'sidebar.link.compose' | trans({}, 'CCDNMessageMessageBundle') }}</a></div>
	</div>
{% endblock %}

{% block body %}

{% include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' %}

<div class="section_wrap_top">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>
<div class="section_wrap_middle">
	<div class="section_header">
		<h2>{{ 'title.message.index' |trans({'%folder_name%': current_folder.getName }, 'CCDNMessageMessageBundle') }}</h2>
	</div>
</div>
<div class="section_wrap_bottom">
	<div style="display: block; width: 90%; text-align: center !important; margin-left: auto; margin-right: auto;">
		<span class="stat_xsmall">
		<div style="width:80%; text-align: center; border-right: 1px solid black; border-left: 1px solid black; margin-left: auto; margin-right: auto;">
			<div style="width: 100%; height: 19px; background-color: #e7f5ff; border-bottom: 1px solid black; text-align: center;">
				<div style="width: {{ inbox_space }}%; height: 19px; background-color: #ff9896; text-align: right; vertical-align: bottom; padding-top: auto; padding-bottom: auto; border-bottom: 1px solid black;">{{ inbox_space }}%</div>
			</div>
			<div style="width: 100%; height: 10px; text-align: center; vertical-align: bottom; position: relative; top: -10px;">
				<div style="width: 24%; height: 100%; padding-top: 10px; display: inline-block; border-right: 1px solid black;">0%</div>
				<div style="width: 24%; height: 100%; padding-top: 10px; display: inline-block; border-right: 1px solid black;">25%</div>
				<div style="width: 24%; height: 100%; padding-top: 10px; display: inline-block; border-right: 1px solid black;">50%</div>
				<div style="width: 24%; height: 100%; padding-top: 10px; display: inline-block;">100%</div>
			</div>
		</div>
		</span>
	</div>
</div>

<div class="section_wrap_standalone">
	<form method="POST" action="{{ path('cc_message_action_bulk') }}">

	<div class="row" style="width: 100%; height: 100%; clear: both; overflow: hidden;">

		<div style="display: block; width: 100%; height: 100%; float: right; margin: 0px; overflow: hidden;">
			<div style="margin: 0px 0px 0px 110px; overflow: hidden; border-left: 1px solid #ccc;">

					<div class="section_tool_strip">
						{% if current_folder.getName == 'drafts' %}
						<input type="submit" class="button_blue" value="{{ 'link.message.send_draft' |trans({}, 'CCDNMessageMessageBundle') }}" name="submit_send">
						{% endif %}
						<input type="submit" class="button_red" value="{{ 'link.message.delete' |trans({}, 'CCDNMessageMessageBundle') }}" name="submit_delete">
						<input type="submit" class="button_silver" value="{{ 'link.message.mark_as_read' |trans({}, 'CCDNMessageMessageBundle') }}" name="submit_mark_as_read">
						<input type="submit" class="button_silver" value="{{ 'link.message.mark_as_unread' |trans({}, 'CCDNMessageMessageBundle') }}" name="submit_mark_as_unread">
						<select name="select_move_to" class="widget_select">
							{% for row, folder in folders %}
								<option class="widget_select" value="{{ folder.getId }}">{{ folder.getName|title }}</option>
							{% endfor %}
						</select>
						<input type="submit" class="button_silver" value="{{ 'link.message.move_to' |trans({}, 'CCDNMessageMessageBundle') }}" name="submit_move_to">
					</div>
					{% if pager.haveToPaginate %}
					<div class="pagerfanta">
			{#			{% if path(app.request.attributes.get('_route')) = 'cc_message_folder_show' or path(app.request.attributes.get('_route')) = 'cc_message_folder_show_paginated' %} #}
				    	{{ pagerfanta(pager, 'default', {'routeName': 'cc_message_folder_show_paginated', 'routeParams':{'folder_id':current_folder.getName} } ) }}
					</div>
					{% endif %}
					<div class="section_table_panel">
						<table class="common_list">
							<thead>
								<tr>
									<th class="icon"><input type="checkbox" id="check_all" name="check_all"></th>
									<th class="icon"><img class="16x16_icon" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_flag.png') }}" alt="icon"></th>
									<th class="icon"><img class="16x16_icon" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_attachment.png') }}" alt="icon"></th>
									<th class="icon"><img class="16x16_icon" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_pen.png') }}" alt="icon"></th>
									<th class="icon"></th>
									<th class="left"><span class="table_header">{{ 'message.table.head.from' | trans({}, 'CCDNMessageMessageBundle') }}</span></th>
									<th class="left"><span class="table_header">{{ 'message.table.head.subject' | trans({}, 'CCDNMessageMessageBundle') }}</span></th>
									<th class="center"><span class="table_header">{{ 'message.table.head.sent' | trans({}, 'CCDNMessageMessageBundle') }}</span></th>
								</tr>
							</thead>
							<tbody>
							{% for row, message in messages %}
								<tr class="{{ cycle(['row_odd', 'row_even'], row) }}">
									<td class="icon16">
										<input type="checkbox" id="message_{{ message.id }}" name="check_message_{{ message.id }}">
									</td>
									<td class="icon16">
										{% if message.flagged %}
										<img class="16x16_icon" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_flag.png') }}" alt="icon">
										{% endif %}
									</td>
									<td class="icon16">
										{% if message.attachment %}
										<img class="16x16_icon" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_attachment.png') }}" alt="icon">
										{% endif %}
									</td>
									<td class="icon16">
										{% if message.isDraft %}<img width="16" height="16" class="icon16" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_pen.png') }}" alt="icon">{% endif %}
									</td>
									<td class="icon16">
										{% if message.readIt %}
										<img class="16x16_icon" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_email_open.png') }}" alt="icon">
										{% else %}
										<img class="16x16_icon" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_email.png') }}" alt="icon">
										{% endif %}
									</td>
									<td class="left">
										<span class="table_data">
										{% if message.getSentFrom %}
											{% if message.readIt %}
										<a href="{{ path(user_profile_route, {'user_id': message.getSentFrom.getId}) }}">{{ message.getSentFrom }}</a>
											{% else %}
										<a href="{{ path(user_profile_route, {'user_id': message.getSentFrom.getId}) }}"><b>{{ message.getSentFrom }}</b></a>
											{% endif %}
										{% else %}Guest{% endif %}
										</span>
									</td>
									<td class="left">
										<span class="table_data">
										{% if message.readIt %}
											<a href="{{ path('cc_message_message_show_by_id', {'message_id': message.getId }) }}" title="{{ message.getSubject }}">{{ truncDot(message.getSubject, param('ccdn_message_message.folder.truncate_subject')) }}</a>
										{% else %}
											<a href="{{ path('cc_message_message_show_by_id', {'message_id': message.getId }) }}" title="{{ message.getSubject }}"><b>{{ truncDot(message.getSubject, param('ccdn_message_message.folder.truncate_subject')) }}</b></a>
										{% endif %}
										</span>
									</td>
									<td class="center">
										<span class="table_data">
										{{ message.getSentDate|date("d/m/Y - H:i:s") }}
										</span>
									</td>
								</tr>
							{% else %}
								<tr>
									<td class="center" colspan="8">
										<span class="table_empty">{{ 'message.table.empty' | trans({}, 'CCDNMessageMessageBundle') }}</span>
									</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>
					{% if pager.haveToPaginate %}
					<div class="pagerfanta">
				    	{{ pagerfanta(pager, 'default', {'routeName': 'cc_message_folder_show_paginated', 'routeParams':{'folder_id':current_folder.getName} } ) }}
					</div>
					{% endif %}

			</div>
		</div>
		
		<div style="display: block; width: 111px; height: inherit; float: left; margin: 0px -111px 0px 0px; overflow: hidden;">
			<div style="display: block; height: 100%; margin: 0px; overflow: hidden; border-right: 1px solid #ccc;">
				<div class="row">
					<div>
						<div class="v_align_top h_align_centre">
							{% for row, folder in folders %}
								{% if folder.name == current_folder.name %}
								<div class="section_tool_strip" style="background-color: #ebebeb !important;"><a class="sidebar" href="{{ path('cc_message_folder_show', {'folder_name': folder.getName }) }}">{% if folder.getCacheUnreadCount %}<b>{{ folder.getName|title }}&nbsp;({{ folder.getCacheUnreadCount }})</b>{% else %}{{ folder.getName|title }}{% endif %}</a></div>
								{% else %}
								<div class="section_tool_strip"><a class="sidebar" href="{{ path('cc_message_folder_show', {'folder_name': folder.getName }) }}">{% if folder.getCacheUnreadCount %}<b>{{ folder.getName|title }}&nbsp;({{ folder.getCacheUnreadCount }})</b>{% else %}{{ folder.getName|title }}{% endif %}</a></div>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
		
	</div>
	
	</form>

</div>

<div class="section_wrap_standalone">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>

{% endblock %}